{
  "name": "eslint",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "pnpm run lint:backend && pnpm run lint:frontend",
    "type-check": "cd backend && tsc --noEmit",
    "lint:backend": "eslint backend --ext .ts",
    "lint:frontend": "eslint frontend/js --config frontend/eslint.config.js",
    "format": "prettier . --write",
    "prepare": "husky"
  },
  "lint-staged": {
  "backend/**/*.ts": [
    "eslint --fix --max-warnings=0",
    "prettier --write --loglevel warn",
    "bash -c 'npx tsc --noEmit --strict --pretty false --skipLibCheck -p backend/tsconfig.json'"
  ],
  "frontend/**/*.js": [
    "eslint --fix --max-warnings=0 --config frontend/eslint.config.js",
    "prettier --write --loglevel warn"
  ]
},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "eslint": "9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript-eslint": "^8.32.1"
  }
}
